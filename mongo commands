db.locations.save({
	name: 'HackerLab',
	address: '1715 L Street, Sacramento, CA  95811',
	rating: 4,
	facilities: ['hot drinks', 'coworking space', 'premium wifi'],
	coords: [38.5790660,-121.4827300],
	openingTimes: [{
		days: 'Sunday-Saturday',
		opening: '12:00 am',
		closing: '12:00 am',
		closed: false
	}]
})

db.locations.update({
	name: 'HackerLab'
}, {
	$push: {
		reviews: {
			author: 'Thomas Hodges',
			id: ObjectId(),
			rating: 5,
			timestamp: new Date("Oct 30 2016"),
			reviewText: 'Good coworking space.  Some of the regulars here are annoying.'
		}
	}
})

